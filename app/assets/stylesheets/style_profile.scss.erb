@font-face {
	font-family: 'Klavika';
	src: url('<%= asset_path("fonts/klavika-regular-webfont.eot") %>');
	src: url('<%= asset_path("fonts/klavika-regular-webfont.eot?#iefix") %>') format('embedded-opentype'),
		url('<%= asset_path("fonts/klavika-regular-webfont.woff") %>') format('woff'),
		url('<%= asset_path("fonts/klavika-regular-webfont.ttf") %>') format('truetype'),
		url('<%= asset_path("fonts/klavika-regular-webfont.svg#klavika_rgregular") %>') format('svg');
	font-weight: normal;
	font-style: normal;
}

@font-face {
	font-family: 'Klavika';
	src: url('<%= asset_path("fonts/klavika-bold-webfont.eot") %>');
	src: url('<%= asset_path("fonts/klavika-bold-webfont.eot?#iefix") %>') format('embedded-opentype'),
		url('<%= asset_path("fonts/klavika-bold-webfont.woff") %>') format('woff'),
		url('<%= asset_path("fonts/klavika-bold-webfont.ttf") %>') format('truetype'),
		url('<%= asset_path("fonts/klavika-bold-webfont.svg#klavika_bdbold") %>') format('svg');
	font-weight: bold;
	font-style: normal;
}

body {
	font-family: 'Klavika', 'Helvetica Neue', Helvetica, Arial, sans-serif;
	font-size: 18px;
	line-height: 24px;
}

#wrap {
	overflow: hidden;
}

.navbar {
	background: url(profile/nav-bar-shade.png) no-repeat 50% 100%;
	font-size: 24px;
	font-family: 'Klavika', 'Helvetica Neue', Helvetica, Arial, sans-serif;
	font-weight: bold;
	text-transform: none;
	padding-bottom: 35px;
}

.navbar-fixed-top .navbar-inner,
.navbar-static-top .navbar-inner {
	border: 0;
	-webkit-box-shadow: none;
	-moz-box-shadow: none;
	-ms-box-shadow: none;
	-o-box-shadow: none;
	box-shadow: none;
}

.navbar ul.nav {
	margin-top: 0;
}

.navbar ul.nav > li > a {
	color: #00769d;
	padding: 25px;
}

.navbar .signout {
	font-size: 14px;
}

.page-profile {
	padding: 50px 0 0;
	position: relative;
	z-index: 1;
}

h1,
h2,
h3 {
	color: #0073ac;
}

hr {
	border-color: #acacac;
}

.user-details {
	font-size: 18px;
	padding: 8px 0 30px 40px;
}

.user-thumb {
	padding: 0 0 0 22px;
}

.user-thumb .thumb {
	border: 5px solid #0073ac;
	border-radius: 50px;
	box-shadow: none;
	padding: 0;
	width: 70px;
	height: 70px;
}

.user-details h3 {
	margin: 0;
	padding: 20px 0 5px;
}

.user-details .contacts,
.user-details .contacts li {
	list-style-type: none;
	margin: 0;
	padding: 0;
}

.user-details .contacts li {
	background: no-repeat 0 7px;
	line-height: 20px;
	padding: 5px 0 5px 25px;
}

.user-details .contacts .linkedin { background-image: url(profile/icon-linkedin.png); }
.user-details .contacts .phone { background-image: url(profile/icon-phone.png); }
.user-details .contacts .skype { background-image: url(profile/icon-skype.png); }

.user-details .contacts a {
	text-decoration: underline;
}

.i-need,
.i-offer {
	background: no-repeat 0 15px;
	min-height: 70px;
	padding: 0 0 20px 90px;
}

.i-need {
	background-image: url(profile/i-need.jpg);
}

.i-offer {
	background-image: url(profile/i-offer.jpg);
}

.i-need h2,
.i-offer h2 {
	margin-top: 0;
	padding-top: 0;
}

.i-need ul,
.i-offer ul {
	margin: 0;
	padding: 0;
}

.i-need ul li,
.i-offer ul li {
	background: url(profile/bullet.png) no-repeat 0 6px;
	list-style-type: none;
	margin: 0;
	padding: 0 0 0 20px;
}

.edit-link-wrap {
	margin: 30px 0 -25px;
	position: relative;
	z-index: 1;
}

.edit-link-wrap a {
	background: url(profile/edit-profile.png) no-repeat 0 0;
	color: #fff;
	display: block;
	font-size: 29px;
	font-weight: bold;
	height: 46px;
	margin: 0 auto;
	line-height: 43px;
	padding: 0 0 0 38px;
	text-align: center;
	width: 183px;
}

footer {
	background: #e2e2e2 url(profile/footer-shade.png) no-repeat 50% 0;
	color: #464646;
	font-size: 14px;
	height: 40px;
	margin-top: 0;
	padding-top: 60px;
}

.connection-line {
	position: absolute;
	width: 100%;
	height: 2px;
	left: 0;
	top: 168px;
	z-index: 0;
	overflow: hidden;
}

.connection-line-inner {
	border-top: 2px dotted #a5d1ea;
	width: 100%;
	height: 10px;
	left: 0;
	top: 0;
	position: absolute;
}

@media (max-width: 979px) {
	.user-details {
		padding-left: 0;
	}

	.page-profile {
		padding-top: 0;
	}

	.connection-line {
		top: 175px;
	}
}

@media (max-width: 767px) {
	.connection-line {
		display: none;
	}
}
