<script>
  if(window.opener) {
    window.opener.location.reload(true);
    window.close()
  }
</script>
<div id="signupModal" class="modal hide fade">
  <%= render partial: 'home/wizard' %>
</div>

<% if current_user %>
  <% if current_user.id == @user.id %>
    <div class="row well well-small" style="margin-top: 18px;">
      <b class="user_full_name">
        <%= link_to_if current_user.id == @user.id, "Edit Profile", '#' %>
      </b>
    </div>
  <% end %>
  <div class="row">
    <div class="span2">
      <%= render '/home/sidebar' %>
    </div>
    <div class="span10">
      <div class="row">
        <div class="span5">
          <h3>Needs</h3>
          <ul>
            <% @user.needs.each do |need| %>
              <li><%= need.name %></li>
            <% end %>
          </ul>
        </div>
        <div class="span5">
          <h3>Offering</h3>
          <ul>
            <% @user.offerings.each do |offering| %>
              <li><%= offering.name %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <hr />

      <% if @user.matches.count > 0 %>
        <div class="row">
          <div class="span10">
            <h3>Top Matches</h3>
            <% @user.matches.each do |match| %>
              <%= render 'home/match', match: match %>
            <% end %>
          </div>
        </div>
        <hr />
      <% end %>

      <div class="row">
        <div class="span10">
          <div class="row">
            <div class="span5">
              <h3>Upcoming Meetings</h3>

              <table class="table table-hover table-bordered">
